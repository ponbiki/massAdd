{% extends "base.html.twig" %}
{% block title %}{{ page }}{% endblock %}
{% block head %}
    {{ parent() }}
    {% block keywords %}
        <meta name='keywords' content='NS1, NSONE, api cheat {{ meta }}'>
    {% endblock %}
{% endblock %}
{% block content %}
    <div id='tabs'>
        <ul>
            <li><a href='#results' title='Match Results'>Match Results</a></li>
            <li><a href='#search' title='Answer Search'>Answer Search</a></li>
        </ul>
        <div id='results'>
            <form method='post' action='/replace'>
                <fieldset>
                    <legend>Matched Records for <big><big style='color:#EB006B'>{{ answer }}</big></big></legend>
                    <div id="dialog1" title="Tip">
                        <p>Click on any records you want to unselect from changing.</p>
                    </div>
                    <a id="opener1" class="ui-state-default ui-corner-all tip" title="Change Record Help" style="width:19px;height:19px;padding:0px;margin:0px;font-size:1pt;">
                        <span class="ui-icon ui-icon-help"></span>
                    </a>
                {% set x = 0 %}
                {% for record in records %}
                    {% set x = x + 1 %}
                    {% set check = "check" ~ x %}
                    <p title='{{ record }}'>
                        <input type='checkbox' class='checkbox' id='{{ check }}' name='change_record[]' value='{{ record }}' checked/>
                        <label for='{{ check }}'>
                            {{ record }}
                        </label>
                    </p>
                {% endfor %}
                </fieldset>
            </form>
        </div>
        <div id='search'>
            <form method='post' action='/search'>
                <p>Enter the answer you would like to search for.</p>
                <p><label for="answer">Answer: </label><input id="answer" name="answer" title="Enter Answer" placeholder="Enter Answer to Search"></p>
                <input type='submit' value='Search' title="Search"/>
            </form>
        </div>
    </div>
    {% block scripts %}
        <script type='text/javascript'>
            $(function() {
                $( "#tabs" ).tabs({
                    collapsible: true
                });
                $( document ).tooltip();
                $( "input[type=checkbox], a, button" ).button();
                $( "input[type=submit], a, .jbutton" ).button();
                $( "#dialog1" ).dialog({
                    autoOpen: false,
                    show: {
                        effect: "blind",
                        duration: 1000
                    },
                    hide: {
                        effect: "fold",
                        duration: 1000
                    }
                });
                $( "#opener1" ).click(function() {
                    $( "#dialog1").dialog( "open" );
                });
            });
            $(document).ready(function() {
                setTimeout(function() {
                    $( ".notify" ).fadeOut(1000, function () {
                        $( ".notify" ).css({"visibility":"hidden","display":"block"}).slideUp();
                    });
                }, 3500);
            });
        </script>
    {% endblock %}                
{% endblock %}